<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
   
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            >

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/personalinfo_bg" >

                <ImageView
                    android:id="@+id/info_modify_rrheader_imageview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
					android:layout_marginTop="15dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/infomodify_rrname_text"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/info_modify_rrheader_imageview"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="35dp"
                    android:text="人人姓名"
                    android:gravity="center"
                    android:textSize="20sp"
                     />

                <TextView
                    android:id="@+id/infomodify_rrid_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/info_modify_rrheader_imageview"
                    android:layout_alignRight="@+id/infomodify_rrname_text"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="人人ID" />

            </RelativeLayout>

           
        </LinearLayout>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
             >

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                 />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal" >
           
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
              	android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="@string/nickname" 
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/info_modify_nickname_edittext"
                android:layout_width="0dp"
                android:layout_weight="2.75"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_bg"
                android:ems="10" >
               
            </EditText>

            

        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="44dp" 
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="@string/phonenumber"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/info_modify_phonenumber_edittext"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.75"
                android:background="@drawable/edit_bg"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
             >
            <TextView
               
                android:layout_width="160dp"
                android:layout_height="wrap_content"
               />

            <TextView
                
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.56" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
             >
           
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="现密码" 
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/info_modify_nowpassword_edittext"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.75"
                android:background="@drawable/edit_bg"
                android:inputType="textPassword"
                android:ems="10" >
               
            </EditText>

           
        </LinearLayout>
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
           

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textSize="18sp"
                android:text="新密码" />

            <EditText
                android:id="@+id/info_modify_newpassword_edittext"
                android:layout_width="0dp"
                android:layout_weight="2.75"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_bg"
                android:inputType="textPassword"
                android:ems="10" >
               
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="270dp"
           android:layout_height="44dp"
             android:orientation="horizontal"
             android:layout_gravity="center_horizontal"
             >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/info_modify_newpassword_edittext2"
                android:layout_width="0dp"
                android:layout_weight="2.75"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_bg"
                android:inputType="textPassword"
                android:ems="10" >

            </EditText>

        </LinearLayout>

        
        
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            >
            
          <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true" >

        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_dark_selector"
            android:scaleType="centerInside"
            android:src="@drawable/add_alarm_cancel" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="fill_parent" />

        <ImageButton
            android:id="@+id/ok_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_dark_selector"
            android:scaleType="centerInside"
            android:src="@drawable/add_alarm_confirm" />
    </LinearLayout>
        </RelativeLayout>
    
     </RelativeLayout>

</LinearLayout>

