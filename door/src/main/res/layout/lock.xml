<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alarm_bg"
    tools:context=".MainActivity" >
    
    <LinearLayout 
        android:id="@+id/linear_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        ></LinearLayout>
    <ImageView 
        android:id="@+id/imageView3"
        android:layout_width="1dp"
        android:layout_height="250dp"
        android:src="@drawable/gray_line"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/handler"
        />

    <com.geeker.door.lock.HandlerView
        android:id="@+id/handler"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/lock_normal" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:layout_toLeftOf="@id/handler"
        android:src="@drawable/gray_line" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:layout_toRightOf="@id/handler"
        android:src="@drawable/gray_line" />

    <ImageView
        android:id="@+id/node1"
        android:layout_width="60dp"
        android:layout_height="60dp"
		android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_alignLeft="@id/imageView1"
        android:layout_marginLeft="10dp"
        android:scaleType="centerInside"
         />

    <ImageView
        android:id="@+id/node2"
        android:layout_width="60dp"
        android:layout_height="60dp"
		android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_alignRight="@id/imageView2"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"
         />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/handler"
        android:orientation="horizontal" >

        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/lock_icon1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/lock_icon_calls"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                />
            <TextView 
                android:id="@+id/lock_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/lock_icon1"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView 
                android:id="@+id/lock_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="未接来电"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/linear1"
        android:orientation="horizontal" >

        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/lock_icon2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/lock_icon_sms"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                />
            <TextView 
                android:id="@+id/lock_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/lock_icon2"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView 
                android:id="@+id/lock_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="短信"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/linear2"
        android:orientation="horizontal" >

         <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/lock_icon3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                />
            <TextView 
                android:id="@+id/lock_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/lock_icon3"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <com.geeker.door.utils.CustomTextView 
                android:id="@+id/lock_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/linear3"
        android:orientation="horizontal" >

        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/lock_icon4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                />
            <TextView 
                android:id="@+id/lock_time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/lock_icon4"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <com.geeker.door.utils.CustomTextView 
                android:id="@+id/lock_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/linear4"
        android:orientation="horizontal" >

        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/lock_icon5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                />
            <TextView 
                android:id="@+id/lock_time5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/lock_icon5"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <com.geeker.door.utils.CustomTextView 
                android:id="@+id/lock_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/linear5"
        android:orientation="horizontal" >

         <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/lock_icon6"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                />
            <TextView 
                android:id="@+id/lock_time6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_toLeftOf="@id/lock_icon6"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <com.geeker.door.utils.CustomTextView 
                android:id="@+id/lock_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
	</LinearLayout>
    
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2099年99月99日"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:textSize="20sp" />
	 <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 : 22"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/date"
        android:textSize="60sp" />
	 <LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:layout_below="@id/time"
	     >
	     <TextView 
	         android:id="@+id/lunar_text"
	         android:layout_width="0dp"
	         android:layout_height="match_parent"
	         android:layout_weight="1"
	         android:gravity="center"
	         android:textColor="@color/white"
	         android:text="周一，农历二月初六"
	         />
	     <TextView 
	         android:id="@+id/weather_text"
	         android:layout_width="0dp"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:gravity="center"
	         android:textColor="@color/white"
	         android:text="晴转多云，7~21℃"
	         />
	 </LinearLayout>
    
</RelativeLayout>