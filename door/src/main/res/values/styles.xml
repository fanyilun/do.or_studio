<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">  
        <item name="android:actionBarStyle" >@style/myActionBarStyle</item>  
    </style>
      
    <style name="myLightStyle" parent="android:Theme.Light.NoTitleBar">
        
    </style>
    <style name="myActionBarStyle" parent="android:Widget.ActionBar" >  
        <item name="android:background">#66ccff</item>  
        <item name="android:displayOptions">showHome</item>
    </style>
    <style name="mystyle" parent="android:Animation">  
        <item name="@android:windowEnterAnimation">@anim/head_in</item>  //进入时的动画   
        <item name="@android:windowExitAnimation">@anim/head_out</item>    //退出时的动画   
    </style>  
    <style name="RadioButtonStyles">
        <item name="android:button">@drawable/radio_selector</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    
    
     <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
     <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
</resources>
