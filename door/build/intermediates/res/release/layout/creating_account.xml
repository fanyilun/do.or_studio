<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_centerInParent="true"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
         >

            <ImageButton
                android:id="@+id/createaccount_imageButton_rrlogin"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/createccount_imagebutton_selec" />

        <TextView
            android:id="@+id/createaccount_headertext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/createaccount_imageButton_rrlogin"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:text="@string/header_text" 
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/createaccount_headertextview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createaccount_imageButton_rrlogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/header_text2" 
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_above="@+id/createaccount_imageButton_rrlogin"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/createaccount_headertext1"
            android:background="@drawable/login_line"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp" >

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
             android:layout_above="@+id/createaccount_imageButton_rrlogin"
            android:layout_toRightOf="@+id/createaccount_headertext1"
            android:background="@drawable/login_line"
            android:layout_marginBottom="30dp"
            android:orientation="vertical" 
            android:layout_marginRight="10dp">

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/createaccount_imageButton_rrlogin"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/createaccount_headertextview2"
            android:background="@drawable/login_line"
            android:layout_marginTop="30dp"
            android:orientation="vertical" 
            android:layout_marginLeft="10dp">

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/createaccount_imageButton_rrlogin"
            android:layout_toRightOf="@+id/createaccount_headertextview2"
            android:background="@drawable/login_line"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

        </LinearLayout>
        

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp" 
         
            >

            <TextView
                android:id="@+id/createAccount_textView_userName"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="@string/username" 
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/createaccount_editText_userNameedit"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/createAccount_textView_userName"
                android:background="@drawable/edit_bg"
                android:ems="10"
                android:gravity="center" >

            </EditText>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" 
            android:orientation="horizontal">

            <TextView
                android:id="@+id/createAccount_textView_nickName"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="@string/nickname" 
                 android:textSize="20sp"/>

            <EditText
                android:id="@+id/createAccount_editText_nickName"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/createAccount_textView_nickName"
                android:background="@drawable/edit_bg"
                android:ems="10"
                android:gravity="center" >

            </EditText>
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" 
            >

            <TextView
                 android:id="@+id/createAccount_textView_password"
                 android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:text="@string/password" 
                 android:textSize="20sp"/>

            <EditText
                android:id="@+id/createaccount_password_edit"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/createAccount_textView_password"
                android:background="@drawable/edit_bg"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPassword" >
                
            </EditText>
            
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" 
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview_to_lock"
                 android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
               />

            <EditText
                android:id="@+id/createAccount_editText_password2"
                android:inputType="textPassword"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textview_to_lock"
                android:background="@drawable/edit_bg"
                android:ems="10"
                android:gravity="center" >

            </EditText>
            
        </RelativeLayout>
        <Button
            android:id="@+id/createaccount_imageButton_startingUse"
            android:layout_width="200dp"
            android:layout_height="50dp"
			android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/radiobutton_bg_selector"
            android:gravity="center"
            android:text="@string/start_using"
            android:textColor="#ffffff"
            android:textSize="30sp" />
	</LinearLayout>



</LinearLayout>
    <TextView
        android:id="@+id/createAccount_textview_creatingLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="@string/bottom"
        android:textColor="@color/textcolor_selector"
        android:clickable="true"
        android:textSize="18sp" />
</RelativeLayout><!-- From: file:/C:/Users/Administrator.PC-20140203LGYQ/StudioProjects/door/door/src/main/res/layout/creating_account.xml -->