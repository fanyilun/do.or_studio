<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="消息"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/message_arrow"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/arrows" />
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/white_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="消息推送"
            android:textSize="17sp" />

        <Switch
            android:id="@+id/switch_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="8dp"
            android:textOff="关闭"
            android:textOn="开启" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/white_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="接受好友叫醒"
            android:textSize="17sp" />

        <Switch
            android:id="@+id/switch_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="8dp"
            android:textOff="关闭"
            android:textOn="开启" />
    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/request_divider"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/black_bg" />
   
    <LinearLayout
        android:id="@+id/lock_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:background="#eeeeee"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="锁屏"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/lock_arrow"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/arrows" />
    </LinearLayout>
     
     <LinearLayout 
        android:id="@+id/lock_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:background="#eeeeee"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/white_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="DO.OR锁屏"
            android:textSize="17sp" />

        <Switch
            android:id="@+id/switch_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="8dp"
            android:textOff="关闭"
            android:textOn="开启" />
    </LinearLayout>
	<LinearLayout
                    android:id="@+id/set_homekey"
                    android:layout_width="260dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_drawable_selector"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="锁定HOME键"
                        android:textSize="17sp"
                         />

                    <TextView
                     	android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:text="防止直接解锁"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:paddingRight="10dp"
                        android:src="@drawable/arrows" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/set_syslock"
                    android:layout_width="260dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_drawable_selector"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="禁用系统锁屏"
                        android:textSize="17sp"
                         />

                    <TextView
                     	android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:text="防止出现双锁屏"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:paddingRight="10dp"
                        android:src="@drawable/arrows" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/set_locktheme"
                    android:layout_width="260dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_drawable_selector"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="主题"
                        android:textSize="17sp"
                         />

                    <TextView
                     	android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="30dp"
                        android:text="设置DO.OR锁屏背景"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:paddingRight="10dp"
                        android:src="@drawable/arrows" />
                </LinearLayout>
                </LinearLayout>
    
    
</LinearLayout>
